source ~/.screenrc

#rails server
screen -t 'server'
eval meta colon "stuff 'number 7'" "stuff ^M"
stuff 'rake db:test:prepare && rails server -e test' 
stuff ^M

#spork
screen -t 'spork-rspec'
stuff 'spork'
stuff ^M
eval meta colon "stuff 'number 11'" "stuff ^M"

#watchr
screen -t 'watchr'
stuff 'watchr .watchr' 
stuff ^M

# editors
screen -t 'vi spec/' vi
screen -t 'vi' vi

# bash
screen
screen

# test console # do not press enter as rake db:test:prepare has to run
screen -t 'test_console'
eval meta colon "stuff 'number 9'" "stuff ^M"
stuff 'rails console test' 

# dev console
screen -t 'dev_console'
eval meta colon "stuff 'number 8'" "stuff ^M"
stuff 'rails console' 
stuff ^M

# switch to the vi screen
eval meta select "stuff '1'" "stuff ^M"

