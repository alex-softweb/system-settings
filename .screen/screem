source ~/.screenrc

#rails server
screen -t 'server'
stuff 'rails server' 
stuff ^M

# editors
screen -t 'vi' vi
screen -t 'vi' vi

# bash
screen
screen

# notes # when vi exits, the terminal is killed
screen -t 'notes' sh -c "vi .project.notes"
eval meta colon "stuff 'number 8'" "stuff ^M"

# rails console
screen -t 'console'
eval meta colon "stuff 'number 9'" "stuff ^M"
stuff 'rails console' 
stuff ^M

#spork cucumber
screen -t 'spork-cuke'
stuff 'spork cucumber'
eval meta colon "stuff 'number 11'" "stuff ^M"
stuff ^M

# switch to the vi screen
eval meta select "stuff '1'" "stuff ^M"
