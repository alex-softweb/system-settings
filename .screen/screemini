source ~/.screenrc

#rails server
screen -t 'server'
stuff 'rails server' 
stuff ^M

# editors
screen -t 'vi' vi
screen -t 'vi' vi

# bash
screen
screen

# notes # when vi exits, the terminal is killed
screen -t 'notes' sh -c "vim -p2 ~/gitbasket/WorkFlow.notes ~/gitbasket/ruby.notes ~/gitbasket/ikonverse.notes"
eval meta colon "stuff 'number 8'" "stuff ^M"

# rails console
screen -t 'console'
eval meta colon "stuff 'number 9'" "stuff ^M"
stuff 'rails console' 
stuff ^M

# switch to the notes screen
eval meta select "stuff '8'" "stuff ^M"
