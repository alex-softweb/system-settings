source ~/.screenrc

#rails server
screen -t 'server'
stuff 'rails server' 
stuff ^M

# editors
screen -t 'vi' vi
screen -t 'vi' vi

# notes # when vi exits, the terminal is killed
screen -t 'notes' sh -c "vi ~/gitbasket/"
eval meta colon "stuff 'number 8'" "stuff ^M"

# rails console
screen -t 'console'
eval meta colon "stuff 'number 9'" "stuff ^M"
stuff 'rails console' 
stuff ^M

# bash
screen
eval meta colon "stuff 'number 3'" "stuff ^M"

# switch to the vi screen
eval meta select "stuff '1'" "stuff ^M"
