# vim: set ft=sh:

if [ -e /tmp/setup-notes-window ]; then
  rm /tmp/setup-notes-window

  i3 move down
  i3 border none

  for i in 1 2 3; do
    i3 resize shrink up
  done

  if $(tmux has-session -t notes); then
    tmx-attach-session notes
  else
    automux notes
  fi # rvm is not detected on startup
fi
