#! /usr/bin/env bash

notes_window_stashed=/tmp/notes-window-stashed

if [ -e $notes_window_stashed ]; then
  i3 [con_mark="notes-window"] scratchpad show

  i3 floating disable
  i3 move down

  for i in 1 2 3; do
    i3 resize shrink up
  done

  rm $notes_window_stashed
else
  i3 [con_mark="notes-window"] focus
  i3 move scratchpad

  touch $notes_window_stashed
fi
