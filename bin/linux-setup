#! /usr/bin/env bash

if [[ ! $(dpkg --get-selections | grep git) ]]; then
  # Get the dotfiles.
  sudo apt-get install -y git
  git init
  git remote add origin https://github.com/notalex/dotfiles
  git pull origin master
fi

# for postgresql 9.6 see notes.
sudo apt-get install -y vim-gnome curl htop ruby ruby-dev ranger exuberant-ctags keynav xclip i3 terminator xfce4-terminal imagemagick gimp build-essential libqt5script5 smplayer vlc elinks udiskie rtorrent mosh unclutter gperf ragel libmagic-dev swig postgresql postgresql-client libpq-dev software-properties-common vpnc libmagickwand-dev exfat-fuse exfat-utils gtk-recordmydesktop apt-transport-https ubuntu-restricted-addons unrar libavcodec-extra libreadline-dev rlwrap id3

sudo apt-get install -y vim htop ruby ruby-dev ranger exuberant-ctags imagemagick gperf ragel libmagic-dev swig postgresql postgresql-client libpq-dev software-properties-common vpnc libmagickwand-dev exfat-fuse exfat-utils gtk-recordmydesktop apt-transport-https ubuntu-restricted-addons unrar libavcodec-extra libreadline-dev rlwrap

sudo curl -L https://yt-dl.org/downloads/latest/youtube-dl -o /usr/local/bin/youtube-dl
sudo chmod a+rx /usr/local/bin/youtube-dl

sudo add-apt-repository -y ppa:hluk/copyq
sudo add-apt-repository -y ppa:neovim-ppa/stable
sudo add-apt-repository -y ppa:hnakamur/tmux
sudo add-apt-repository -y ppa:nemh/systemback
sudo apt-get update
sudo apt-get install -y neovim copyq tmux systemback
sudo apt-get install -y tlp acpi-call-dkms tp-smapi-dkms

curl -L https://github.com/hbin/top-programming-fonts/raw/master/install.sh | bash
sudo fc-cache -fv

sed -i '/^# Alias definitions.$/,+8d' ~/.bashrc
echo 'source ~/.custom_bash' >> ~/.bashrc

git clone https://github.com/rbenv/rbenv.git ~/.rbenv
cd ~/.rbenv && src/configure && make -C src
cd ~

mkdir -p ~/.rbenv/plugins
git clone https://github.com/rbenv/ruby-build.git ~/.rbenv/plugins/ruby-build

git clone https://github.com/ndbroadbent/scm_breeze ~/.scm_breeze
~/.scm_breeze/install.sh
git checkout ~/.git.scmbrc
git checkout ~/.bash_profile

curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"
rbenv install 2.2.5
rbenv install 2.2.3

vim -c 'PlugInstall'
