#! /usr/bin/env bash

if [[ ! $(dpkg --get-selections | grep git) ]]; then
  # Get the dotfiles.
  sudo apt-get install -y git
  git init
  git remote add origin https://github.com/notalex/dotfiles
  git pull origin master
fi

# for postgresql 9.6 see notes.
echo '### Install apt deps'
sudo apt-get install -y vim-gnome curl htop ruby ruby-dev ranger exuberant-ctags keynav xclip i3 terminator xfce4-terminal imagemagick gimp build-essential libqt5script5 smplayer vlc elinks udiskie rtorrent mosh unclutter gperf ragel libmagic-dev swig postgresql postgresql-client libpq-dev software-properties-common vpnc libmagickwand-dev exfat-fuse exfat-utils gtk-recordmydesktop apt-transport-https ubuntu-restricted-addons unrar libavcodec-extra libreadline-dev rlwrap id3 python3-venv libssl-dev

sudo apt-get install -y vim htop ruby ruby-dev ranger exuberant-ctags imagemagick gperf ragel libmagic-dev swig postgresql postgresql-client libpq-dev software-properties-common vpnc libmagickwand-dev exfat-fuse exfat-utils gtk-recordmydesktop apt-transport-https ubuntu-restricted-addons unrar libavcodec-extra libreadline-dev rlwrap

sudo curl -L https://yt-dl.org/downloads/latest/youtube-dl -o /usr/local/bin/youtube-dl
sudo chmod a+rx /usr/local/bin/youtube-dl

sudo add-apt-repository -y ppa:hluk/copyq
sudo apt-get update
sudo apt-get install -y copyq
sudo apt-get install -y tlp acpi-call-dkms tp-smapi-dkms python3-pip

echo '### Install brew -> tmux & nvim'
sudo apt-get install -y linuxbrew-wrapper
brew install
brew install tmux neovim

curl -L https://github.com/hbin/top-programming-fonts/raw/master/install.sh | bash
sudo fc-cache -fv

sed -i '/^# Alias definitions.$/,+8d' ~/.bashrc
echo 'source ~/.custom_bash' >> ~/.bashrc

echo '### Install asdf'
git clone https://github.com/asdf-vm/asdf.git ~/.asdf
cd ~/.asdf
git checkout "$(git describe --abbrev=0 --tags)"
echo -e '\n. $HOME/.asdf/asdf.sh' >> ~/.bashrc
echo -e '\n. $HOME/.asdf/completions/asdf.bash' >> ~/.bashrc
cd
source ~/.bashrc
asdf plugin add ruby
asdf install ruby 2.5.3

echo '### Install ScmBreeze'
git clone https://github.com/ndbroadbent/scm_breeze ~/.scm_breeze
~/.scm_breeze/install.sh
git checkout ~/.git.scmbrc
git checkout ~/.bash_profile

echo '### Install Qutebrowser'
mkdir projects; cd projects
git clone https://github.com/qutebrowser/qutebrowser.git
cd qutebrowser
python3 scripts/mkvenv.py
cd

# Vim plugins
curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
vim -c 'PlugInstall'
