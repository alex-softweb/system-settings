" vim: set ft=vim:
"loadplugins '\.(js|penta)$'

colorscheme custom

cabbreviate py pentadactyl
cabbreviate lu google_lucky

"bmark https://www.google.com/search?btnI=I%27m+Feeling+Lucky&q=%s -title 'Google feeling lucky search ' -keyword google_lucky

" hide all scrollbars
set guioptions=Cs

" will not work without ! and spaces around =
"set! browser.tabs.closeWindowWithLastTab = false

imap <C-m> <CR>

" Convert tabopen to open
cmap <C-0> <Home><Right><Right><Right><C-u><End>

cmap <C-p> <Up>
cmap <C-n> <Down>
cmap <C-i> <Tab>
cmap <C-o> <S-Tab>

nmap <C-e> :source ~/.pentadactylrc<cr>:echomsg 'reloaded!'<cr>  
nmap <C-y> :colorscheme custom<cr>:echomsg 'colorscheme updated!'<cr>
nmap <C-a>t :!date "+%B %d - %H:%M"<cr>
" stub increment shortcut
nmap <C-a> <Right>
nmap <C-a>a <C-^>
nmap d <Right>

" #-----------emacs mode
imap <c-a> <Home>
imap <C-e> <End>
imap <c-f> <Right>
imap <c-b> <Left>

cmap <c-a> <home>
cmap <c-f> <Right>
cmap <c-b> <Left>
