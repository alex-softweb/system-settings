" vim: set ft=vim:
"loadplugins '\.(js|penta)$'

colorscheme custom

cabbreviate py pentadactyl
cabbreviate lu google_lucky

"bmark https://www.google.com/search?btnI=I%27m+Feeling+Lucky&q=%s -title 'Google feeling lucky search ' -keyword google_lucky

" hide all scrollbars
set guioptions=Cs
set browser.tabs.closeWindowWithLastTab=false

imap <C-m> <CR>

cmap <C-p> <Up>
cmap <C-n> <Down>
cmap <C-i> <Tab>
cmap <C-o> <S-Tab>
cmap <C-b> <C-Left>
cmap <C-f> <C-Right>

nmap <C-e> :source ~/.pentadactylrc<cr>:echomsg 'reloaded!'<cr>  
nmap <C-y> :colorscheme custom<cr>:echomsg 'colorscheme updated!'<cr>
