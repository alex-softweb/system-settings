" vim: set ft=vim:
"loadplugins '\.(js|penta)$'

colorscheme custom

cabbreviate py pentadactyl
cabbreviate gi google_image

"bmark https://www.google.com/search?btnI=I%27m+Feeling+Lucky&q=%s -title 'Google feeling lucky search ' -keyword google_lucky
"bmark http://images.google.com/images?q=%s -title 'Google Image search ' -keyword google_image
"bmark http://rubygems.org/gems/%s -title 'rubygems' -keyword 'rubygems'
"bmark http://thesaurus.com/browse/%s -title 'thesaurus' -keyword 'thesaurus'
"bmark! http://kat.ph/search/%s/ -title 'kat-torrents' -keyword 'kat-torrents'
"bmark! http://en.wikipedia.org/wiki/%s -title 'wikipedia' -keyword 'wikipedia-en'
"bmark! http://www.animefushigi.com/?s=%s -title 'Anime Fushigi' -keyword 'fushigi'
"bmark! https://github.com/search?q=%s -title 'Github Search' -keyword 'github-search'
"bmark! http://www.iconfinder.com/search/?q=%s -title 'IconFinder' -keyword 'iconfinder'
"bmark! https://duckduckgo.com/?q=%s -title 'DuckDuckGo' -keyword 'duckgo'

" hide all scrollbars
set guioptions=Cs

" will not work without ! and spaces around =
"set! browser.tabs.closeWindowWithLastTab = false

imap <C-m> <CR>
imap <C-j> <nop>
imap <C-i> <TAB>
imap <C-o> <S-TAB>
imap -builtin <C-s> <C-i>
imap <C-n> <Down>
imap <C-p> <Up>

" Convert tabopen to open
cmap <C-u> <Home>tab<Up><Home><Del><Del><Del><End>

" Convert open to tabopen
cmap <C-t> <Home>tab<CR>
cmap <C-p> <Up>
cmap <C-n> <Down>
cmap <C-i> <Tab>
cmap <C-o> <S-Tab>
cmap <C-l> <Home><C-right><Space>google_lucky<CR>

map -m hints <C-m> <CR>

" To jump to a link found after search
nmap <C-m> <CR>
nmap <C-e> :source ~/.pentadactylrc<cr>:echomsg 'reloaded!'<cr>  
nmap <C-y> :colorscheme custom<cr>:echomsg 'colorscheme updated!'<cr>
nmap w :open wikipedia-en<Space>
" Useful to center the search result.
nmap zz <C-d>

" firebug
nmap ;ff :firebug<Space>
nmap ;fq :firebug toggle<cr>
nmap ;ft :firebug tab<Space>
nmap ;f/ :firebug tab html <cr>:firebug / <cr>
nmap ;fct :firebug toggle-console<cr>:firebug tab console<cr>
nmap ;c :firebug tab console<cr>

" convert to localhost
nmap ;l O<C-a><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del>open localhost<cr>

" #----------- stubs
" C-j/C-k annoyingly opens up google.com
nmap <C-j> <nop>
nmap <C-k> <nop>

" #-----------emacs mode
imap <c-a> <Home>
imap <C-e> <End>
imap <c-f> <Right>
imap <c-b> <Left>

cmap <c-a> <home>
cmap <c-f> <Right>
cmap <c-b> <Left>
