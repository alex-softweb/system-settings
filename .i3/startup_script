# /usr/bin/env bash

i3 workspace 7

bash ~/.xinput.conf

guake -t &
sleep 5

if $(tmux has-session -t small); then
  guake -e 'tmx-attach-session small'
else
  guake -e 'automux small -fm'
fi

TMUX_ATTACH_NOTES=true gnome-terminal
i3 move down
i3 border none

for i in 1 2 3; do
  i3 resize shrink up
done

firefox &

clipit &
nm-applet &
bluetooth-applet &
gnome-sound-applet &
