# vim: set ft=sh:

i3 workspace 3
i3-msg exec 'xfce4-terminal -e setup-mail-client'
sleep 5

i3 workspace 7

bash ~/.xinput.conf

guake -t &
sleep 5

if $(tmux has-session -t small); then
  guake -e 'tmx-attach-session small'
else
  guake -e 'automux small -f'
fi

firefox &
sleep 10

i3-msg exec 'xfce4-terminal -e setup-notes-session'
sleep 5

copyq &
nm-applet &
bluetooth-applet &
gnome-sound-applet &
keynav &

tmux set -g status off
edge-swarp
