# vim: set ft=sh:

. ~/.bash_prompt

stty stop undef
stty eof '?'

# vi mode
set -o vi
bind -m vi-insert "\C-l":clear-screen
bind -m vi-insert "\C-e":end-of-line
bind -m vi-insert "\C-a":beginning-of-line
bind -m vi-insert "\C-p":history-search-backward
bind -m vi-insert "\C-n":history-search-forward
