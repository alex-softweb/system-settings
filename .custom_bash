# vim: set ft=sh:

source ~/.bash_functions

# Disable suspend.
stty stop undef

export EDITOR=vim
export TERMINAL=xfce4-terminal
export MANPATH="$HOME/.linuxbrew/share/man:$MANPATH"
export INFOPATH="$HOME/.linuxbrew/share/info:$INFOPATH"

add_to_path $HOME/.rvm/bin
add_to_path $HOME/.git_helpers
add_to_path $HOME/.project_shortcuts
add_to_path /opt/vagrant/bin
add_to_path $HOME/.linuxbrew/bin
add_to_path $HOME/neovim/bin

automux_installed && complete -W "$(automux blueprint list)" automux

source ~/.bash_aliases
source ~/.bash_prompt

if [ -s ~/.rails-environment-variables ]; then
  source ~/.rails-environment-variables
fi
