# for git branch names in prompt
symbol=Ϡ
c_reset=$( tput sgr0 )
c_dir=$( tput setaf 3 )
c_arrow=$( tput setaf 6 )

# using methods ensures that these are executed everytime the file is read
branch_name() { ~/.shortcuts/git_stats branch_name; }
branch_color() { eval $( ~/.shortcuts/git_stats branch_color_code );} # value will be a string which needs eval
symbol_color() { eval $( ~/.shortcuts/git_stats symbol_color ); }


export PS1='\[$(branch_color)\]$(branch_name)\[$(symbol_color)\]$symbol \[$c_dir\]\W\[$c_arrow\]:▶\[$c_reset\] '
